<div class="community-profiles__container grid grid--m1d2">
  {{#each featuredProfiles}}
  <div class="grid__cell">
    <a href="https://profiles.eco/{{this.domain}}" class="profile-tile" data-custom-bg="true" style="background-image: url('{{this.img}}')">
      <div class="profile-tile__wrapper">
        <span class="profile-tile__label"><strong>{{this.domain}}</strong></span>
      </div>
    </a>
    <div class="profile-tile-details">
      <p>{{{this.story}}}</p>
      <p class="profile-tile-details__section"><span class="profile-type__section"><img src="https://cdn.profiles.eco/img/icons/org-type/{{typeIcon this.type}}" class="profile-type__icon" />{{this.type}}</span><span class="profile-type__section"><span class="profile-type__globe glyphicon glyphicon-globe"></span>{{this.location}}</span></p>
    </div>
  </div>
  {{/each}}
</div>

<div class="row">
  <div class="col-sm-12">
    <a href="https://profiles.eco" class="btn btn-primary pull-right">{{t 'global:members.cta'}}</a>
  </div>
</div>
