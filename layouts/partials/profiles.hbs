<div class="community-profiles__container grid grid--m1d2">
  {{#each profiles as |profile| }}
  <div class="grid__cell">
    <a href="https://profiles.eco/{{profile.domain}}" class="profile-tile">
      <div class="profile-tile__wrapper">
        <img class="profile-tile__image" src="{{profile.img}}" alt="" loading="lazy" width="330" height="110">
        <div class="profile-tile__label">
          <strong>{{profile.domain}}</strong>
        </div>
      </div>
    </a>
    <div class="profile-tile-details">
      <p class="profile-tile-details-story">{{{profile.story}}}</p>
      <p class="profile-tile-details__section">
        <span class="profile-type__section">
          <img src="https://cdn.profiles.eco/img/icons/org-type/{{typeIcon profile.type}}" class="profile-type__icon" alt="{{ profile.type}} icon" loading="lazy">
          {{../t (concat 'global:profile-types.' profile.type)}}
        </span>
        <span class="profile-type__section">
          <span class="profile-type__globe"></span>
          {{profile.location}}
        </span>
      </p>
    </div>
  </div>
  {{/each}}
</div>

<div class="row">
  <div class="col-sm-12">
    <a href="/search/" class="btn btn-primary float-end">{{t 'global:members.cta'}}</a>
  </div>
</div>
