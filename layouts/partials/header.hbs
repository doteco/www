<header>
	<nav class="navbar navbar-expand-md navbar-dark">
		<div class="container-lg container-fluid">
			<a class="navbar-brand" href="/">
				<img alt=".eco logo" src="{{img-root}}/doteco-logo-white.svg" width="40" height="37">
			</a>
			<button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="nav navbar-nav">
					<li class="nav-item"><a href="/search/" class="{{checkActive 'search' active}} nav-link">{{t 'global:header.search'}}</a></li>
					{{#if (notequal (t 'global:header.news') 'header.news')}}
					<li class="nav-item"><a href="/news/" class="{{checkActive 'news' active}} nav-link">{{t 'global:header.news'}}</a></li>
					{{/if}}
					<li class="nav-item"><a href="/champions/" class="{{checkActive 'champions' active}} nav-link">{{t 'global:header.champions'}}</a></li>
					<li class="nav-item dropdown">
						<a href="#" class="nav-link dropdown-toggle language-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{lookup languages lang}} <span class="caret"></span></a>
						<ul class="dropdown-menu dropdown-menu-end shadow">
							{{#each languages as |l|}}
							<li><a href="{{lookup ../sites @key}}" class="dropdown-item dropdown-link" lang="{{@key}}">{{l}}</a></li>
							{{/each}}
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>
