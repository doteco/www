---
title: title
description: description
page-path: about/system/
og-image: opengraph/story-og.jpg
og-width: 1200
og-height: 647
i18nNamespace: system
faq: true
---

 <div class="jumbotron system-header">
	<div class="container" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
		<h1 itemprop="name">{{t "head"}}</h1>
		<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
			<p itemprop="text">{{t "subhead"}}</p>
		</div>
	</div>
</div>

<div class="section policy">
	<div class="container">
		<h2>{{{t "why.head" }}}</h2>

		<ul>
			<li>{{{t "why.item1" }}}</li>
			<li>{{{t "why.item2" }}}</li>
			<li>{{{t "why.item3" }}}</li>
			<li>{{{t "why.item4" }}}</li>
		</ul>
	</div>
</div>

<div class="section policy inverted">
	<div class="container">
		<h2>{{{t "buy.head" }}}</h2>
		<div class="row icon-row">

			<div class="col-md-3 icon-text">
				<img src="/img/icons/laptop.svg" alt="domain window icon" class="col-4 col-md-12">
				<p class="col-md-12" >{{t "buy.item1" }}</p>
			</div>

			<div class="col-md-3 icon-text">
				<img src="/img/icons/globe.svg" alt="profile icon" class="col-4 col-md-12">
				<p class="col-md-12" >{{t "buy.item2" }}</p>
			</div>

			<div class="col-md-3 icon-text">
				<img src="/img/icons/profile-light.svg" alt="badge icon" class="col-4 col-md-12">
				<p class="col-md-12">{{t "buy.item3" }}</p>
			</div>

			<div class="col-md-3 icon-text">
				<img src="/img/icons/trustmark-light.svg" alt="badge icon" class="col-4 col-md-12">
				<p class="col-md-12">{{t "buy.item4" }}</p>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<h3>{{t "profiles.head" }}</h3>

		<div class="policy">
		{{{t "profiles.text" joinArrays='' }}}
		</div>
		{{> profiles profiles=priorityProfiles }}

	</div>
</div>
