---
title: title
description: description
page-path:
og-image: opengraph/building-og.png
og-width: 1200
og-height: 630
active: home
changefreq: daily
priority: 1
i18nNamespace: home
faq: true
---

<link rel="preload" as="image" href="/img/carousel/woman-shopping.jpg">

<div class="carousel slide" id="home-carousel" data-bs-interval="5000" data-bs-ride="carousel" data-bs-wrap="false">
	<div class="carousel-inner" role="listbox" aria-label="Header carousel">
		<div class="carousel-item active home-business" role="option"
			style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/img/carousel/woman-shopping.jpg')">
			<div class="container">
				<h2>{{t 'carousel.business.head'}} <span class="carousel-subheader">{{t 'carousel.business.subhead'}}</span></h2>
			</div>
		</div>

		<div class="carousel-item home-government" role="option">
			<div class="container">
				<h2>{{t 'carousel.gov.head'}} <span class="carousel-subheader">{{t 'carousel.gov.subhead'}}</span></h2>
			</div>
		</div>

		<div class="carousel-item home-people" role="option">
			<div class="container">
				<h2>{{t 'carousel.people.head'}} <span class="carousel-subheader">{{t 'carousel.people.subhead'}}</span></h2>
			</div>
		</div>

		<div class="carousel-item home-you" role="option">
			<div class="container">
				<h2>{{t 'carousel.tld.head'}} <span class="carousel-subheader">{{t 'carousel.tld.subhead'}}</span></h2>
			</div>
		</div>
	</div>
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#home-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="{{t 'carousel.business.head'}}"></button>
    <button type="button" data-bs-target="#home-carousel" data-bs-slide-to="1" aria-label="{{t 'carousel.gov.head'}}"></button>
    <button type="button" data-bs-target="#home-carousel" data-bs-slide-to="2" aria-label="{{t 'carousel.people.head'}}"></button>
    <button type="button" data-bs-target="#home-carousel" data-bs-slide-to="3" aria-label="{{t 'carousel.tld.head'}}"></button>
  </div>
</div>

<div class="section search">
	<div class="container">
		<form method="get" class="search-form" role="search">
			<h1 class="subheader search-header"><label for="input-search">{{t 'search.head'}}</label></h1>
			<div class="row">
				<div class="col-md-2"></div>
				<div class="col-md-8">
					<div class="input-group">
						<input id="input-search" type="search" class="form-control domain-search" name="domain" placeholder="example.eco" autocomplete="off" autocapitalize="off">
						<input class="btn btn-search" type="submit" title="{{t 'global:search.cta'}}" value="">
						</button>
					</div>
				</div>
				<div class="col-md-2"></div>
			</div>
		</form>
	</div>
</div>

<div class="section recent">
	<div class="container">
		<div class="row">
			<div class="recently-registered col-3">{{{t 'registered.head'}}}</div>
			<div class="col-9">
				<div id="registered-domains" class="registered-domains">
				</div>
			</div>
		</div>
	</div>
</div>

<div class="section home-eligibility">
	<div class="container">
		<div class="row">

			<div class="col-md-6 home-eligibility-question" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
				<h2 itemprop="name">{{{t 'eligibility.head'}}}</h2>
				<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
					<div itemprop="text">{{{t 'eligibility.text' joinArrays=''}}}</div>
				</div>
			</div>

			<div class="col-md-6 home-eligibility-question" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
				<h2 itemprop="name">{{{t 'purchase.head'}}}</h2>
				<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
					<div itemprop="text">{{{t 'purchase.text' joinArrays=''}}}</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="section home-orgs inverted">
	<div class="container" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
		<div class="section-label">{{{t 'global:partners.head'}}}</div>
		<h2 itemprop="name">{{{t 'global:partners.subhead'}}}</h2>

		<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
			<p itemprop="text">{{{t 'global:partners.text'}}}</p>
		</div>

		{{> logos }}
	</div>
</div>

<div class="section home-who">
	<div class="container" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
		<div class="section-label" itemprop="name"><a href="/champions/">{{{t 'global:members.head'}}}</a></div>
		<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
			<p itemprop="text">{{{t 'global:members.text' }}}</p>
		</div>
		{{> profiles profiles=priorityProfiles }}
	</div>
</div>

{{#if (equal lang 'en')}}
<div class="section home-news inverted">
	<div class="container">
		<div class="section-label"><a href="/news/">Recent .eco news</a></div>
		<div class="row g-0">
			{{#eachN collections.news}}
			<div class="col-md-4">
				<a href="/{{pagePath path}}">
					<div class="news-tile" style="background-image: url({{ header-img }});">
						<div class="news-tile-overlay">
							<div class="news-tile-content">
								<h3>{{ title }}</h3>
								<p>{{ formatDay pubdate }}</p>
							</div>
						</div>
					</div>
				</a>
			</div>
			{{/eachN}}
		</div>
	</div>
</div>
{{/if}}

<div class="section home-support {{#if (notequal lang 'en')}}inverted{{/if}}">
	<div class="container">
		<div class="section-label">{{t 'support.head'}}</div>
		<div class="row">
			<div class="col-3 col-md-2">
				<span class="support-wave">&#x1F44B;</span>
			</div>
			<div class="col-8 col-md-10">
				{{{t 'support.text' joinArrays=' '}}}
			</div>
		</div>
	</div>
</div>
<script>
	function search() {
		try {
			var url = new URL('search/', window.location)
			url.searchParams.append('domain', document.querySelector('.domain-search').value)
			window.location = url.href
		} catch (e) {
			window.location = '/search/?domain=' + encodeURI(document.querySelector('.domain-search').value)
		}
		return false
	}

	document.querySelector('.btn-search').addEventListener('click', function (e) {
		e.preventDefault()
		return search()
	})

	document.querySelector('.domain-search').addEventListener('keydown', function (e) {
		if (e.keyCode === 13) {
			e.preventDefault()
			return search()
		}
	})

	var registeredDomains = document.getElementById('registered-domains')

	var fadeIn = function (elem, timing, delta, cb) {
		elem.classList.remove('domains-fade-out')
		elem.classList.add('domains-fade-in')
	}

	var fadeOut = function (elem, timing, delta, cb) {
		elem.classList.remove('domains-fade-in')
		elem.classList.add('domains-fade-out')
	}

	var showRecent = function (domains, count) {
		var html = ''
		var length = 0
		var maxWidth = registeredDomains.parentElement.clientWidth / 10

		while (length < maxWidth) {
			var idx = (count + 1) % domains.length
			length += domains[idx].length + 3

			if (length < maxWidth || html.length === 0) {
				if (html.length) {
					html += ' &#8226; '
				}
				html += '<a href="https://profiles.eco/' + domains[idx] + '" class="registered-domain">' + domains[idx] + '</a>'
				count = idx
			}
		}

		registeredDomains.innerHTML = html
		fadeIn(registeredDomains)
		setTimeout(function () {
			fadeOut(registeredDomains)
		}, 3000)
		setTimeout(function () {
			showRecent(domains, count)
		}, 4000)
	}

	if (window.fetch) {
		window.fetch('{{profiles}}/_api/domains/recent?count=50', {
			credentials: 'omit',
			headers: {
				Accept: 'application/json'
			}
		}).then(function (response) {
			return response.json()
		}).then(function (domains) {
			return showRecent(domains, 0)
		}).catch(function (err) {
			console.error('Unable to fetch recent domains.', err)
			if (err.name !== 'TypeError') { // ignore network errors
				window.Sentry && window.Sentry.captureException(err)
			}
		})
	} else {
		document.querySelector('.section.recent').style.display = 'none'
	}
</script>
<script>
	document.addEventListener('DOMContentLoaded', function () {
		document.querySelectorAll('.chat-link').forEach(function (e) {
			e.addEventListener('click', function (e) {
				e.preventDefault()
				Intercom('show')
			})
		})
	})
</script>
